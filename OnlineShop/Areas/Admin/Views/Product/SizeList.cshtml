@model IEnumerable<Models.Ef.SIZE>

<link href="~/Areas/Admin/assets/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/Areas/Admin/assets/plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/Areas/Admin/assets/plugins/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />

<div class="card-body">
    <table class="table table-bordered" id="size-table">
        <thead>
            <tr>
                <th class="text-center">
                    ID
                </th>
                <th style="display:none;"></th>
                <th class="text-center">
                    Size
                </th>
                <th class="text-center">
                    Created Date
                </th>
                <th class="text-center">Options</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.SizeID)
                        </td>
                        <td class="text-center" id="size-@item.SizeID-input">
                            <input class="text-center form-control" id="size-@item.SizeID"
                                   value="@Html.DisplayFor(modelItem => item.Size1)"
                                   readonly />
                        </td>
                        <td class="text-center" id="size-@item.SizeID-text">
                            @Html.DisplayFor(modelItem => item.Size1)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-primary"
                                    type="submit" value="Edit"
                                    id="edit-@item.SizeID"
                                    onclick="return EditItem('@item.SizeID')">
                                <i class="mdi mdi-border-color"></i>
                            </button>
                            <button class="btn btn-sm btn-danger"
                                    type="submit" value="Delete"
                                    id="delete-@item.SizeID"
                                    onclick="return DeleteItem('@item.SizeID')">
                                <i class="mdi mdi-delete"></i>
                            </button>
                            <button class="btn btn-sm btn-success"
                                    type="submit" value="Save"
                                    id="save-@item.SizeID"
                                    onclick="return SaveEdit('@item.SizeID')">
                                <i class="mdi mdi-check"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script src="~/Areas/Admin/assets/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Areas/Admin/assets/plugins/datatables/dataTables.bootstrap4.min.js"></script>
<script src="~/Areas/Admin/assets/plugins/datatables/dataTables.responsive.min.js"></script>
<script src="~/Areas/Admin/assets/plugins/datatables/responsive.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        @foreach (var item in Model)
        {
            <text>
                $("#save-@item.SizeID").hide();
                $("#size-@item.SizeID-input").hide();
            </text>
        }
        $(document).ready(function () {
            $(function () {
                $('#size-table').DataTable()
            });
        });
    });
</script>
