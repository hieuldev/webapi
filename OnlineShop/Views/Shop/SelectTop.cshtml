
@model IEnumerable<Models.Ef.PRODUCT>

@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6">
            <div class="blog-hm-wrapper mb-40">
                <div class="blog-img">
                    <a href="@Url.Action("Details", "Shop", new { id = item.ProductID })"><img src="@item.ShowImage_1" alt="@item.ProductName"></a>
                    <div class="blog-date">
                        <h4>@item.CreatedDate.Value.ToString("dd/MM/yyyy")</h4>
                    </div>
                </div>
                <div class="blog-hm-content">
                    <h3>
                        <a href="@Url.Action("Details", "Shop", new { id = item.ProductID })">
                            @item.ProductName
                        </a>
                    </h3>
                    <p><span>$@item.ProductPrice</span> </p>
                </div>
            </div>
        </div>
    }
}